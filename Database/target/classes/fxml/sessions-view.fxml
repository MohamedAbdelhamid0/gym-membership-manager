<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      spacing="8" fx:controller="com.gymx.controller.SessionsController">
    <padding><Insets topRightBottomLeft="10"/></padding>

    <TableView fx:id="table" prefHeight="300">
        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="60"/>
            <TableColumn text="Title" fx:id="colTitle"/>
            <TableColumn text="Start" fx:id="colStart"/>
            <TableColumn text="End" fx:id="colEnd"/>
            <TableColumn text="TrainerID" fx:id="colTrainer"/>
            <TableColumn text="Max" fx:id="colMax"/>
        </columns>
    </TableView>

    <GridPane hgap="8" vgap="8">
        <children>
            <Label text="Title" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="title" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Start (yyyy-MM-dd HH:mm)" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="start" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <Label text="End (yyyy-MM-dd HH:mm)" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="end" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="TrainerID" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="trainerId" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            <Label text="MaxCapacity" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="maxCap" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </children>
    </GridPane>

    <HBox spacing="8">
        <Button text="Add" onAction="#onAdd"/>
        <Button text="Update" onAction="#onUpdate"/>
        <Button text="Delete" onAction="#onDelete"/>
    </HBox>
</VBox>