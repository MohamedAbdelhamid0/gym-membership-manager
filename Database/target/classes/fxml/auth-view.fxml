<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gymx.controller.AuthController">
    <top>
        <ToolBar styleClass="app-toolbar">
            <Label text="GymX — Secure Access" styleClass="app-title"/>
        </ToolBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="18" styleClass="content-root">
            <padding><Insets topRightBottomLeft="24"/></padding>
            <HBox spacing="8" alignment="CENTER">
                <ToggleButton text="Login" fx:id="loginToggle" selected="true"/>
                <ToggleButton text="Sign up" fx:id="signupToggle"/>
            </HBox>

            <GridPane hgap="10" vgap="10" styleClass="form-grid">
                <children>
                    <Label fx:id="labelFirst" text="First name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="first" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="John"/>
                    <Label fx:id="labelLast" text="Last name" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <TextField fx:id="last" GridPane.rowIndex="0" GridPane.columnIndex="3" promptText="Doe"/>

                    <Label text="Email" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="email" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3" promptText="name@example.com"/>

                    <Label text="Password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="password" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3" promptText="••••••••"/>

                    <Label fx:id="labelRole" text="Role" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="role" GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="ADMIN"/>
                                <String fx:value="TRAINER"/>
                                <String fx:value="STAFF"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </children>
            </GridPane>

            <HBox spacing="10" styleClass="action-bar">
                <Button text="Continue" onAction="#onContinue"/>
                <Label fx:id="status"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>


